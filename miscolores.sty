%-----------------MIS COLORES PARA BEAMERS------------------%
%Definiciones de colores
\definecolor{miazul}{RGB}{50, 100, 100}
\definecolor{miverdeO}{RGB}{0, 100, 0}
\definecolor{miamarillo}{RGB}{200, 200, 0}
\definecolor{mimorado}{RGB}{200, 0, 150}
%\setbeamercolor{template name}{<key=value> list}

%Fondos---------------------
\setbeamercolor{palette primary}{use=structure,fg=black,bg=gray!10}
\setbeamercolor{palette secondary}{fg=black,bg=gray!10!miazul}
\setbeamercolor{palette tertiary}{fg=black,bg=gray!10!miazul}
\setbeamercolor{palette quaternary}{fg=black,bg=white!50!miazul}
\setbeamercolor{block title}{fg=black,bg=white!50!miazul}

%Letras---------------------
\setbeamercolor{section in toc}{fg=miazul,bg=white!40!miazul}
\setbeamercolor{subsection in toc}{fg=miazul,bg=white!40!miazul}
\setbeamercolor{section number projected}{fg=white}
\setbeamercolor{item}{fg=white!40!miazul,bg=white!40!miazul}
\setbeamercolor{alerted text}{fg=red}
\setbeamercolor{bibliography entry author}{fg=miazul,bg=white!60!miazul}
\setbeamercolor{bibliography entry location}{fg=miazul,bg=white!20!miazul}